<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhudao.springboot.dynamic.datasource.sharding.readwrite.mapper.OrderMapper">

    <sql id="FIELDS">
        id, user_id
    </sql>

    <select id="selectById" parameterType="Integer"
            resultType="com.zhudao.springboot.dynamic.datasource.sharding.readwrite.dataobject.OrderDO">
        SELECT
        <include refid="FIELDS"/>
        FROM orders
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.zhudao.springboot.dynamic.datasource.sharding.readwrite.dataobject.OrderDO"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO orders (user_id)
        VALUES (#{userId})
    </insert>

</mapper>
